<h1>New job_application_status</h1>

<% form_for(@job_application_status) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :job_application %><br />
   	<%= f.collection_select :job_application_id, @job_applications, :id, :job_title %>
	<br>
	<%= link_to "Add job application", new_job_application_path %>
  </p>
  <p>
    <%= f.label :job_application_state %><br />
   	<%= f.collection_select :job_application_state_id, @job_application_states, :id, :name %>
	<br>
	<%= link_to "Add job application state", new_job_application_state_path %>
  </p>
  <p>
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </p>
  <p>
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </p>
  <p>
    <%= f.label :user %><br />
    <%= f.collection_select :user_id, @users, :id, :name %>
	<br>
	<%= link_to "Add user", new_user_path %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', job_application_statuses_path %>
