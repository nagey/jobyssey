
<% form_for(:professional, :url => {:controller => "it-professionals", :action => :create}) do |form| %>
<div class="error-messages" id="error-messages-for-professional-signup">
	<%=form.error_messages%>
</div>

<div class="progressbar"><%=l(:professional, :your_details)%><div class="progresscounter"><div class="littlewhitesquare"></div><div class="littleorangesquare"></div><div class="littleorangesquare"></div>
<div class="progresswording"><%=l(:professional, :progress_wording_one)%></div></div>
</div>
<p><%=l(:professional, :cvupload_thanks)%>.</p>
<p><%=l(:professional, :confidentiality_text)%>.</p>
<br>

<H2>Account Details</H2>
<ul>
	<li>
		<label for="professional[name]">Full Name</label>
		<%= form.text_field "name" %>
	</li>
	<li>
		<label for="professional[email]">Email address</label>
		<%= form.text_field 'email' %>
	</li>
	<li>
		<label for="professional[email_confirmation]">Confirm email</label>
		<%= form.text_field 'email_confirmation' %>
	</li>
	<li>
		<label for="professional[password]">Password</label>
		<%= form.password_field 'password' %>
	</li>
	<li>
		<label for="professional[password_confirmation]">Confirm password</label>
		<%= form.password_field 'password_confirmation'%>
	</li>
	<li>
		<label for="professional[desired_job_title]">Desired job title(s):</label>
		<%= form.text_field "desired_job_title" %>
	</li>
	<li><label><b><%=l(:professional, :code_name)%>:</label> <%= @code_name %></b>
	<span class="question" style="cursor:pointer">?</span>

  <div class="answer" style="display:none">
  	<p><%=l(:professional, :code_name_explanation)%>. </p></li>
  	</ul>

<H2>What you're looking for</H2>
<br>

<ul>
	<li>
		<label for="professional[working_time_id]"><%=l(:professional, :working_time)%></label>
		<%= form.collection_select :working_time_id, @working_times, :id, :name %>
	</li>
	<li>
		<label for="professional[employment_type_id]"><%=l(:professional, :employment_type)%></label>
		<%= form.collection_select :employment_type_id, @employment_types, :id, :name %>
	</li>
</ul>
<br>
	<p><%=l(:professional, :more_info)%></p>
		<%= form.text_area :more_info, :rows => 4%>


<label class="tsandcs"><input type="checkbox" id="tsandcs" name="tsandcs" value="1" /><%=l(:professional, :agree_terms)%> <%= link_to "T's and C's", "http://www.jobyssey.com/jobyssey/tsandcs", :popup => true %><%=l(:professional, :terms_link)%>.</a></label>

	<%= submit_tag "Create my account!" %>


<% end %>
