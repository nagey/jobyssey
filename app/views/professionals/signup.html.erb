
<% form_for(:professional, :url => {:controller => "it-professionals", :action => :create}) do |form| %>
<div class="error-messages" id="error-messages-for-professional-signup">
	<%=form.error_messages%>
</div>

<fieldset>
<div class="progressbar"><%=l(:professional, :your_details)%><div class="progresscounter"><div class="littlewhitesquare"></div><div class="littleorangesquare"></div><div class="littleorangesquare"></div>
<div class="progresswording"><%=l(:professional, :progress_wording_one)%></div></div>
</div>
<p><%=l(:professional, :cvupload_thanks)%>.</p>
<p><%=l(:professional, :confidentiality_text)%>.</p>
<br>
<ul>
	<li>
		<label for="professional[name]"><%=l(:professional, :name)%></label>
		<%= form.text_field "name" %>
	</li>
	<li>
		<label for="professional[email]"><%=l(:professional, :email)%></label>
		<%= form.text_field 'email' %>
	</li>
	<li>
		<label for="professional[email_confirmation]"><%=l(:professional, :email_confirmation)%></label>
		<%= form.text_field 'email_confirmation' %>
	</li>
	<li>
		<label for="professional[password]"><%=l(:professional, :password)%></label>
		<%= form.password_field 'password' %>
	</li>
	<li>
		<label for="professional[password_confirmation]"><%=l(:professional, :password_confirmation)%></label>
		<%= form.password_field 'password_confirmation'%>
	</li>
	</ul>
	<br>
<div id = "codename">

<label><b><%=l(:professional, :code_name)%>:</label> <%= @code_name %></b>

<span class="question">?</span>

<div class="answer" style="display:none">
	<p><%=l(:professional, :code_name_explanation)%>. </p>  
	</div>
</div>

<fieldset>
<legend><%=l(:professional, :looking_for_legend)%>... </legend>
<br>
<ul>
	<li>
		<label for="professional[working_time_id]"><%=l(:professional, :working_time)%></label>
		<%= form.collection_select :working_time_id, @working_times, :id, :name %>
	</li>
	<li>
		<label for="professional[employment_type_id]"><%=l(:professional, :employment_type)%></label>
		<%= form.collection_select :employment_type_id, @employment_types, :id, :name %>
	</li>
</ul>
<br>
	<p><%=l(:professional, :more_info)%></p>
		<%= form.text_area :more_info %>

</fieldset>
<label class="tsandcs"><input type="checkbox" id="tsandcs" name="tsandcs" value="1" /><%=l(:professional, :agree_terms)%> <a href="/jobyssey/tsandcs"><%=l(:professional, :terms_link)%>.</a></label>

	<%= submit_tag l(:professional, :create_account)%>

</fieldset>
<% end %>
