<h1>Current Activity</h1>
<% for job in @jobs %>
  <h2><%= job.title %></h2>
  <table>
  <% for job_application in job.job_applications%>
    <% if job_application.job_posting_id = job.id %>
      <tr><td><%= link_to job_application.user.code_name, :controller => :professionals, :action => :view_cv, :id => job_application.user.code_id unless job_application.user.nil? %></td></tr>
    <% end %>
<% end %>
        </table>
<% end %>

<h1>Your Activity</h1>

<h2>Open Aplications</h2>
<table>
  <% for job_application in @applies %>
    <tr><td><%= job_application.job_posting.title %></td><td><%= job_application.user.first_name + " " + job_application.user.last_name %></td></tr>
  <% end %>
</table>

<h2>Invitations</h2>
<table>
  <% for job_application in @invites %>
    <tr><td><%= job_application.job_posting.title unless job_application.job_posting.nil? %></td><td><%= job_application.user.code_name%></td></tr>
  <% end %>
</table>

