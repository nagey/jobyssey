<h1>Editing employer</h1>

<% form_for(@employer) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :tagline %><br />
    <%= f.text_field :tagline %>
  </p>
  <p>
    <%= f.label :size %><br />
    <%= f.text_field :size %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
     <%= f.label :industry %><br />
   	<%= f.collection_select :industry_id, @industries, :id, :name %>
	<br>
	<%= link_to l(:add_industry), new_industry_path %>
	
  </p>
  <p>
    <%= f.label :search_position %><br />
    <%= f.text_field :search_position %>
  </p>
  <p>
     <%= f.label :geo_position %><br />
   	<%= f.collection_select :geo_position_id, @geo_positions, :id, :latitude %>
	<br>
	<%= link_to l(:add_geo_position), new_geo_position_path %>
	</p>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @employer %> |
<%= link_to 'Back', employers_path %>
