<h1>Professionals</h1>
<h2>Total professionals on site: <b><%= @professionals.length %></b></h2>
<br>
<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Code name</th>

   
  </tr>

<% for user in @professionals %>
  <tr>
    <td><%= link_to user.first_name, :controller => "professionals", :action => "view", :id => user unless user.code_name.nil? %></td>
    <td><%= link_to user.last_name, :controller => "professionals", :action => "view", :id => user unless user.code_name.nil? %></td>
    <td><%=h user.email %></td>
    <td><%= link_to user.code_name, :controller => "professionals", :action => "view", :id => user unless user.code_name.nil? %></td>

    <td><%= link_to 'Edit', :action => :edit_professional, :id => user %></td>
    <td><%= button_to 'Destroy', { :controller => "users", :action => :destroy, :id => user }, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

