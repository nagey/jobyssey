<h1>New job_posting</h1>

<% form_for(@job_posting) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :employer_id %><br />
    <%= f.text_field :employer_id %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :search_position %><br />
    <%= f.text_field :search_position %>
  </p>
  <p>
    <%= f.label :maximum_salary %><br />
    <%= f.text_field :maximum_salary %>
  </p>
  <p>
    <%= f.label :minimum_salary %><br />
    <%= f.text_field :minimum_salary %>
  </p>
  <p>
    <%= f.label :education_required %><br />
    <%= f.check_box :education_required %>
  </p>
  <p>
    <%= f.label :employment_type_id %><br />
    <%= f.text_field :employment_type_id %>
  </p>
  <p>
    <%= f.label :working_time_id %><br />
    <%= f.text_field :working_time_id %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', job_postings_path %>
