<h1>Listing users</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Code name</th>
    <th>Type</th>
    <th>Employer</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.first_name %></td>
    <td><%=h user.last_name %></td>
    <td><%=h user.email %></td>
    <td><%= link_to user.code_name, :controller => "professionals", :action => "view", :id => user unless user.code_name.nil? %></td>
    <td><%=h user.type %></td>
    <td><%=h user.employer.name unless user.employer.nil? %></td>
    <td><%= link_to 'Show', :controller => "users", :action => "show", :id => user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= button_to 'Destroy', { :controller => "users", :action => :destroy, :id => user }, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

