<h1>Editing user</h1>

<% form_for(@user, :action => :update) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :middle_names %><br />
    <%= f.text_field :middle_names %>
  </p>
  <p>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </p>
  <p>
     <%= f.label :email %><br />
     <%= f.text_field :email %>
     </p>
     <p> 
     <%= f.label :email_confirmation %> <br />
     <%= f.text_field :email_confirmation %>
   </p>

  <p>
    <%= f.label :code_name %><br />
    <%= f.text_field :code_name %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @user %> |
