<% form_for(@attachment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :entity_id %><br />
    <%= f.text_field :entity_id %>
  </p>
  <p>
    <%= f.label :entity_type %><br />
    <%= f.text_field :entity_type %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :attachment %><br />
    <%= f.text_field :attachment %>
  </p>
  <p>
    <%= f.label :file_name %><br />
