<h1>Job Postings</h1>
<p>Job postings list</p>
<br/>
<table>
	<tr>
    	<th>Title</th>
    	<th>Employer</th>
    	<th>Description</th>
    	<th>Search position</th>
    	<th>Maximum salary</th>
    	<th>Minimum salary</th>
    	<th>Education required</th>
    	<th>Employment type</th>
    	<th>Working time</th>
	</tr>
	
	<% @jobs.each do |job| %>
	<tr>
    	<td><%=h job.title %></td>
    	<td><%=h job.employer.name unless job.employer.nil? %></td>
    	<td><%=h job.description %></td>
    	<td><%=h job.search_position %></td>
    	<td><%="%0.2f" % job.maximum_salary %></td>
    	<td><%="%0.2f" % job.minimum_salary %></td>
    	<td><%=h job.education_required %></td>
    	<td><%=h job.employment_type_id %></td>
    	<td><%=h job.working_time_id %></td>
    	<td><%= link_to 'Show', :action => :show, :id => job.id %></td>
    	<td><%= link_to 'Edit', :action => :edit, :id => job.id %></td>
    	<td><%= link_to 'Destroy', job, :confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
	<% end unless @jobs.nil?%>
</table>
<br/>

<%= link_to 'New job', 'new' %>