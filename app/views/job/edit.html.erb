<h1>Editing job</h1>

<% form_for:job, :url => { :action => "skills", :id => @job.id} do |f| %>
  <%= f.error_messages %>

  <p>
   	<%= f.label :title %><br />
   <%= f.text_field :title %>
 </p>
 <p>
   <%= f.label :employer %><br />
   <%= f.collection_select :employer_id, @employers, :id, :name %>
	<br>
	<%= link_to l(:add_employer), new_employer_path %>
 </p>
 <p>
   <%= f.label :description %><br />
   <%= f.text_area :description %>
 </p>
 <p>
   <%= f.label :search_position %><br />
   <%= f.text_field :search_position %>
 </p>
 <p>
   <%= f.label :maximum_salary %><br />
   <%= f.text_field :maximum_salary %>
 </p>
 <p>
   <%= f.label :minimum_salary %><br />
   <%= f.text_field :minimum_salary %>
 </p>
 <p>
   <%= f.label :education_required %><br />
   <%= f.check_box :education_required %>
 </p>
 <p>
   <%= f.label :employment_type %><br />
   <%= f.collection_select :employment_type_id, @employment_types, :id, :name %>
	<br>
	<%= link_to l(:add_employment_type), new_employment_type_path %>
 </p>
 <p>
  <%= f.label :working_time %><br />
   <%= f.collection_select :working_time_id, @working_times, :id, :name %>
	<br>
	<%= link_to l(:add_working_time), new_working_time_path %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @job_posting %> |
