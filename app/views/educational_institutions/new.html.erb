<h1>New educational_institution</h1>

<% form_for(@educational_institution) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.collection_select :town, @town, :name, :name  %><br />
    <%= link_to l(:add_town), new_town_path %>
  </p>
  <p>
    <%= f.collection_select :country, @country, :name, :name %><br />
    <%= link_to l(:add_country), new_country_path %>
  </p>
  <p>
    <%= f.collection_select :geo_position, @geo_position, :name, :name %><br />
    <%= link_to l(add_geo_position), new_geo_position_path %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', educational_institutions_path %>
