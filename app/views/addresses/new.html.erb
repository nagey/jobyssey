<h1>New address</h1>

<% form_for(@address) do |f| %>
  <%= f.error_messages %>
<p>
    <%= f.label :address1 %><br />
    <%= f.text_field :address1 %>
  </p>
  <p>
    <%= f.label :address2 %><br />
    <%= f.text_field :address2 %>
  </p>
  <p>
    <%=f.label :town_id %><br />
	<%= f.collection_select :town_id, @towns, :id, :name %>
	<br>
	<%= link_to l(:add_town), new_town_path %>
  </p>
  <p>
	 <%=f.label :geo_position_id %><br />
   	<%= f.collection_select :geo_position_id, @geo_positions, :id, :latitude %>
	<br>
	<%= link_to l(:add_geo_position), new_geo_position_path %>

  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', addresses_path %>
