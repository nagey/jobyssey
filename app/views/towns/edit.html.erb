<h1>Editing town</h1>

<% form_for(@town) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
   	<%= f.label :administrative_division %><br />
   <%= f.collection_select :administrative_division_id, @administrative_divisions, :id, :name %>
	<br>
	<%= link_to "Add administrative division", new_administrative_division_path %>
 </p>
 <p>
   <%= f.label :country %><br />
   <%= f.collection_select :country_id, @countries, :id, :name %>
	<br>
	<%= link_to "Add country", new_country_path %>
 </p>
 <p>
 <%= f.label :geo_position %><br />
   <%= f.collection_select :geo_position_id, @geo_positions, :id, :name %>
	<br>
	<%= link_to "Add geo position", new_geo_position_path %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @town %> |
<%= link_to 'Back', towns_path %>
