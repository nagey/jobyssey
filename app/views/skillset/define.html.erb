
<fieldset>
<legend>Your Skills: </legend>

<p>Adjust the slider to indicate your level of proficiency in each of the following areas- all the way to the left for newbies, to the right for Jedi-like powers.</p>
<br>
<ul id="skill-list" class="skills-list">
	
	<% @professional.personal_qualities.each do |pq| %>
		<% if pq.metric.class == Skill %>
		<% @pq = pq %>
		<% @pq.value = 50 if @pq.value.nil? %>
		
		<% form_for @pq.metric.name.to_sym, @pq, :url => {:action => :update_value}, :html => { :id => @pq.metric.id.to_s+'_form'} do |form| %>
			<%=form.hidden_field :value, {:size => 2} %>
			<%=form.hidden_field :id %>
			<%=hidden_field_tag 'object_name', @pq.metric.name %>
			<li class="skills_list_skill_item">
				<label class="skillname"><%= pq.metric.display_name %></label>		
				<%= render :partial => 'slider', :locals => {:name => @pq.metric.id, :value => @pq.value} %>
			</li>
			<% end %>
	
		<% end %>
	<% end %>
</ul>
<br>
<fieldset>
<legend>Need to Add a Skill?</legend>
<ul>
<% form_for(:skill, :url => {:action => :add}) do |form| %>
	<li><%= form.text_field :name, :update => :autocomplete_skill %></li>
	<br>
	<%= submit_tag l(:skills, :add_skill )%> 
<% end %>
</ul>
</fieldset>

<%= link_to l(:skills, :done_skills), :action => :finalize %>

</fieldset>