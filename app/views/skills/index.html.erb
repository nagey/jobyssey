<h1>Listing skills</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for skill in @skills %>
  <tr>
    <td><%=h skill.display_name %></td>
    <td><%= link_to 'Show', skill %></td>
    <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
    <td><%= link_to 'Destroy', skill, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New skill', new_skill_path %>
