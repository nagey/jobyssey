<h1>Editing job_application_state</h1>

<% form_for(@job_application_state) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :order %><br />
    <%= f.text_field :order %>
  </p>
  <p>
    <%= f.label :workflow_id %><br />
    <%= f.text_field :workflow_id %>
  </p>
  <p>
    <%= f.label :job_application_status_type %><br />
   	<%= f.collection_select :job_application_status_type, @ob_application_status_types, :name, :name %>
	<br>
	<%= link_to l(:add_ob_application_status_type), new_ob_application_status_type_path %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @job_application_state %> |
