<html>
<head>
	<title><%= title :site_name => "Jobyssey â€“ IT Jobs in Ireland" %></title>
	<meta http-equiv="Content-Type" content="text/html;charset=utf-8" />	
	<%= stylesheet_link_tag "current" %>
	<%= javascript_include_tag 'jquery', 'jquery-ui', 'jrails', 'application','jquery.form' %>
	<script src="http://www.plaxo.com/css/m/js/util.js" type="text/javascript"></script>
	<script src="http://www.plaxo.com/css/m/js/basic.js" type="text/javascript"></script>
	<script src="http://www.plaxo.com/css/m/js/abc_launcher.js" type="text/javascript"></script>
	<script language="Javascript">
	$(document).ready(function(){
	   $(".login").click(function(){
			$("#loginbar").toggle("slow"); 
	});
	});
	</script>
</head>

<body>	

	<div id="container">
		<div id="header">
		<p>Your journey starts today</p>
			<a class= "headerlinks" href="/"><h1><span id="bigj">J</span>obyssey</h1></a>

		</div>
<div id="navbar">
	<ul>
		<li class="login">Login</li>
	</ul>
</div>
<div id = "loginbar" style="display:none">
	<form name="frmLogin">
		<input type="hidden" name="action" value="login" />
		<label>Email:</label><input type="text" name="user[username]"  size="19" maxlength="36"  />
		<label>Password:</label><input type="password" name="user[passwd]" size="19" maxlength="24"  />
		<input type="submit" name="submittedlogin" value="Login"  />
		<a class="small" href="">Forgot your password?</a>
	</form>
</div>

<% if flash[:notice] -%> 
<div id="notice"><%= flash[:notice] %></div> 
<% end -%> 

<div id="behindcontent">
<div id="content">
<%=@content_for_layout%>
</div>

<div id="footer">
	<div id="bottomnavbar">
		<ul>
			<li><a href="/wordpress/"><%=l(:our_blog)%></a></li>
			<li><a href="/about"><%=l(:about_us)%></a></li>
			<li><a href="/contact/new"><%=l(:contact_us)%></a></li>
		</ul>
	

	<div id="copyright">
		<p class="snug"><%=l(:copyright_footer)%> 
	</div>
</div>
</div>
</div>	
</div>
</body>
</html>