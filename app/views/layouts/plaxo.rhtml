<html>
<head>
	<title><%= title :site_name => "Jobyssey â€“ IT Jobs in Ireland" %></title>
	<meta http-equiv="Content-Type" content="text/html;charset=utf-8" />	
	<%= stylesheet_link_tag "current" %>
	<%= javascript_include_tag 'jquery', 'jquery-ui', 'jrails', 'application','jquery.form' %>
	<script src="http://www.plaxo.com/css/m/js/util.js" type="text/javascript"></script>
	<script src="http://www.plaxo.com/css/m/js/basic.js" type="text/javascript"></script>
	<script src="http://www.plaxo.com/css/m/js/abc_launcher.js" type="text/javascript"></script>
	<script language="Javascript">
	$(document).ready(function(){
	   $(".login").click(function(){
			$("#loginbar").toggle("slow"); 
	});
	});
	</script>
</head>

<body>	

	<div id="container">
		<div id="header">
		<p><%=l(:your_journey)%></p>
		
		<% if authenticated? %>
			<% if professional?%>
				<H1><%= link_to "Jobyssey", :controller => 'professionals', :action => "home" %></h1>
			<% else %>
				<a class= "headerlinks" href="/"><h1>Jobyssey</h1></a>
			<% end %>
		<% else %>
			<a class= "headerlinks" href="/"><h1>Jobyssey</h1></a>
			<% end %>

		
		</div>
<div id="navbar">

		<% if authenticated? %>
			<div class="info">Welcome, <%=authenticated?.first_name.capitalize %></div>
	<ul>		
			<% if professional? %>
				<li class="professional"><%= link_to "Jobs", :controller => 'jobyssey', :action => "jobs" %></li>
				<!--<li class="professional">Profile</li>-->
				<li class="professional"><%= link_to "Portfolio", :controller => 'portfolio', :action => "links" %></li>
				<li class="professional"><%= link_to "Activity", :controller => 'jobyssey', :action => "activity" %></li>
			<li class="professional"><%= link_to "Tips", :controller => 'jobyssey', :action => "job_search_tips" %></li>
			<% elsif employer? %>
				<li class="employer">Activity</li>
				<li class="employer">New Role</li>
				<li class="employer">Manage jobs</li>
				<li class="employer">Profile</li>
				<li class="employer">Account</li>
				<li class="employer">Tips</li>
				<li class="employer"> CREDITS (display total here)</li>
			<% end %>
			<li class="logout"><a href="/jobyssey/logout">Logout</a></li>
		<% else %>
			<li class="login">Login</li>
		<% end %>
	</ul>
</div>

<div id = "loginbar" style="display:none">
	<%=render :partial => "jobyssey/login"%>
</div>


<% if flash[:notice] -%> 
<div id="notice"><%= flash[:notice] %></div> 
<% end -%> 

<div id="behindcontent">
<div id="content">
<%=@content_for_layout%>
</div>

<div id="footer">
	<div id="bottomnavbar">
		<ul>
			<li><a href="/wordpress/"><%=l(:our_blog)%></a></li>
			<li><a href="/about"><%=l(:about_us)%></a></li>
			<% if authenticated? %>
				<% if session[:user].type == "Professional" %>
				<li><%= link_to "Contact Us", :controller => :messages, :action => :general_questions %></li>
				<% else %>
				<li><%= link_to "Contact Us", :controller => :messages, :action => :client_questions %></li>
				<% end %>
			<% else %>
				<li><%= link_to "Contact Us", :controller => :messages, :action => :general_questions %></li>
			<% end %>
		</ul>
	</div>

	<div id="copyright">
		<p class="snug"><%=l(:copyright_footer)%> 
	</div>
</div>
</div>
</div>	
</div>
<script type="text/javascript">
var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
</script>
<script type="text/javascript">
var pageTracker = _gat._getTracker("UA-3701319-1");
pageTracker._trackPageview();
</script>
</body>
</html>