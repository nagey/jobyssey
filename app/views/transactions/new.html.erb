<h1>New transaction</h1>

<% form_for(@transaction) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :account %><br />
    <%= f.collection_select :account_id, @accounts, :id, :name %>
	<br>
	<%= link_to "Add account", new_account_path %>
  </p>
  <p>
    <%= f.label :transaction_type %><br />
    <%= f.collection_select :transaction_type, @transaction.transaction_types, :to_s, :to_s %>

  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :reference %><br />
    <%= f.text_field :reference %>
  </p>
  <p>
    <%= f.label :job_application %><br />
    <%= f.collection_select :job_application_id, @job_applications, :id, :name %>
	<br>
	<%= link_to "add job application", new_job_application_path %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', transactions_path %>
