<h1>Listing transactions</h1>

<table>
  <tr>
    <th>Account</th>
    <th>Transaction type</th>
    <th>Amount</th>
    <th>Reference</th>
    <th>Job application</th>
  </tr>

<% for transaction in @transactions %>
  <tr>
    <td><%=h transaction.account_id %></td>
    <td><%=h transaction.transaction_type %></td>
    <td><%=h transaction.amount %></td>
    <td><%=h transaction.reference %></td>
    <td><%=h transaction.job_application_id %></td>
    <td><%= link_to 'Show', transaction %></td>
    <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
    <td><%= link_to 'Destroy', transaction, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New transaction', new_transaction_path %>
